<%= render "navbar" %>
<div class="banner">
  <h1>Where to, boss?</h1>
  <div class="banner-form">
    <%= form_with url: "/index", method: :post do |f| %>
      <%= f.text_field :name, placeholder: "Search", class: "input-text" %>
      <%= f.date_field :date, value: Date.today %>
      <%= f.time_field :start_time, value: @time %>
      <%= f.time_field :end_time, value: @newtime %>
      <%= f.submit "Search", class: "btn btn-banner" %>
      <% end %>
  </div>
</div>
<div class="tagline">
  <div class="container">
    <div><h1>WhereWorks</h1></div>
    <div><h2>When you're actually more productive away from the office</h2></div>
  </div>
</div>
<%= render "footer" %>
