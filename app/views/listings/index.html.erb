<%= render "indexnavbar" %>

<div class="container">

  <div class="btn-wrap">
    <button class="btn-filter" type="button">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.1.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M3.853 54.87C10.47 40.9 24.54 32 40 32H472C487.5 32 501.5 40.9 508.1 54.87C514.8 68.84 512.7 85.37 502.1 97.33L320 320.9V448C320 460.1 313.2 471.2 302.3 476.6C291.5 482 278.5 480.9 268.8 473.6L204.8 425.6C196.7 419.6 192 410.1 192 400V320.9L9.042 97.33C-.745 85.37-2.765 68.84 3.854 54.87L3.853 54.87z"/></svg>
      <span>Filter</span>
    </button>
  </div>

  <div class="map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="listing-container">
    <% @listings.each do |listing| %>
      <div class="listing-card">
        <%= link_to listing_path(listing), class: "link-wrap" do %>
          <div class="img-wrap">
            <% if listing.photos[0].nil? %>
              <%= cl_image_tag "07l71vlgt3tel77cjg4ifo6pfefn", class: "cafe-img" %>
            <% else %>
              <%= cl_image_tag listing.photos[0].key, class: "cafe-img" %>
            <% end %>
          </div>
          <div class="content-wrap">
            <p class="listing-name"><%= listing.name %></p>
            <p><%= listing.address %></p>
            <p><%= listing.listing_type %></p>
            <p><%= listing.booking_type %></p>
            <p>10 tables available</p>
            <p class="listing-price">$ <%= listing.price %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= simple_form_for :listing, url: listings_path, method: :get do |f| %>
  <%= f.number_field :min,
    in: 5.00..30.00, step: 0.50,
    class: "form-control",
    value: 5
  %>
  <%= f.number_field :max,
    in: 5.00..30.00, step: 0.50,
    class: "form-control",
    value: 30
  %>
  <% if params[:listing].present? %>
    <%= f.hidden_field :address, value: params[:listing][:address] %>
  <% end %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
<%= render "footer" %>
